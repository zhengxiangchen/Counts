<!--index.wxml-->
<view wx:if="{{tempFilePaths.length <= 0}}">
  <i-notice-bar icon="systemprompt" closable>
    步骤1: 拍照或者上传已有图片
  </i-notice-bar>
</view>
<view wx:else>
  <i-notice-bar icon="systemprompt" closable>
    步骤2: 点击 '图片计数' 按钮
  </i-notice-bar>
</view>
<view class="container">
  <view class="text" wx:if="{{tempFilePaths.length <= 0}}">
    <image src="../../images/add.png" mode="scaleToFill" style="width: 500rpx; height: 500rpx;" bindtap='chooseimage'/>
    <text style="margin-top:120rpx; color:#5c5c5c;">请上传图片</text>
  </view>
  <view wx:else>
    <image src="{{tempFilePaths}}" mode="widthFix" bindtap='chooseimage' style="margin-top:-80rpx;"/>
    <button type='primary' style="margin-top:120rpx;" bindtap="toCount" disabled='{{disabled}}'>图片计数</button>
  </view>
</view>
